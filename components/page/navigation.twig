<aside>
    <ul>
        {% for item in navigation.items %}
            <li class='{{item.classes|join(' ')}}'>
                <a href='{{item.get_link}}'>{{item.title}}</a>
                {% if item.current %}
                    <ul>
                        {% for anchor in anchors %}
                            <li><a href='#{{anchor.anchor}}'>{{anchor.heading}}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</aside>